DROP USER 'MYSQL_USER'; 

FLUSH PRIVILEGES;

CREATE USER 'MYSQL_USER'@'%' IDENTIFIED BY 'MYSQL_PASSWORD'; 
CREATE DATABASE IF NOT EXISTS `MYSQL_DATABASE`; 
GRANT ALL ON `MYSQL_DATABASE`.* TO 'MYSQL_USER'@'%';

CREATE DATABASE IF NOT EXISTS playster_content; 
CREATE DATABASE IF NOT EXISTS playster_ingestion; 
CREATE DATABASE IF NOT EXISTS playster_reporting; 
